    <form asp-action="SaveTvShowDeletion" asp-route-tvShowId="@Model.ShowId">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="TvShows" asp-controller="Admin">Back to List</a>
