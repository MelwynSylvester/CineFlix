<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CineFlix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CineFlix.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Admin" asp-action="AdminHome"><b><i>CineFlix</i></b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Movies">Movies</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="TvShows">Tv Shows</a></li>
                    </ul>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                <form method="Get">
                <ul class="navbar-nav">

                @{if(ViewContext.RouteData.Values["action"].ToString()=="Movies" && ViewContext.RouteData.Values["controller"].ToString()=="Admin")
                    {
                        <li class="nav-item">   
                            <input type="text" class="form-control" name="MovieName" id="MovieName" placeholder="Movie/Genres">
                        </li>
                        <li class="nav-item">
                            <button type="submit" class="btn btn-primary mb-2" asp-controller="Admin" asp-action="Movies">Search</button>
                        </li>
                    }
                }
 
                &nbsp;    
 
                @{if(ViewContext.RouteData.Values["action"].ToString()=="TvShows" && ViewContext.RouteData.Values["controller"].ToString()=="Admin")
                    {                    
                        <li class="nav-item">
                             <input type="text" class="form-control" name="TvShowName" id="TvShowName" placeholder="TV Show/Genres">
                        </li>  
                        <li class="nav-item">
                            <button type="submit" class="btn btn-primary mb-2" asp-controller="Admin" asp-action="TvShows">Search</button>
                        </li>
                    }              
                }
                </form>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="bottom:0%;position:fixed;width:100%;text-align:center;">
        <div class="container">
            &copy; 2023 - CineFlix - <a asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
